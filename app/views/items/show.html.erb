<html lang="en-GB">
  <h1>
    <%= @item.name %>
  </h1>
  <p style="color: green"><%= notice %></p>
  <hr>

  <div class="card border-0">
    <div class="card-body">
      <h3 class="card-title">Description</h3>
      <p class="card-text"><%= @item.description %></p>
    </div>
  </div>

  <div style="height:10px; background: transparent;">
    <hr style="display:none;" />
  </div>

  <% if @item.URL? %>
    <div class="card border-0">
      <div class="card-body">
        <h3 class="card-title">Specified URL</h3>
        <p class="card-text"><%= @item.URL %></p>
      </div>
    </div>
<% else %>
  <div class="card border-0">
    <div class="card-body">
      <h3 class="card-title">No specified URL</h3>
    </div>
  </div>
  <% end %>

  <div style="height:10px; background: transparent;">
    <hr style="display:none;" />
  </div>

  <% if @item.tags != "None" %>
    <div class="card border-0">
      <div class="card-body">
        <h3 class="card-title">Tags</h3>
        <p class="card-text"><%= @item.tags %></p>
      </div>
    </div>
  <% else %>
  <div class="card border-0">
    <div class="card-body">
      <h3 class="card-title">No specified tags</h3>
    </div>
  </div>
  <% end %>

  <div style="height:10px; background: transparent;">
    <hr style="display:none;" />
  </div>

  <div>
    <div class = "d-flex align-items-center justify-content-center hstack gap-3">
      <a href="/items">
        <button type="button" class="btn btn-secondary">Back to items</button>
      </a>
      <%= link_to "Generate PDF", "/items/#{@item.id}.pdf", class: "btn btn-secondary" %>
    </div>
  </div>
</html>